<div class="container mt-5">
  <h1 class="mb-4">Quartos</h1>

  <p><%= link_to "Novo Quarto", new_room_path, class: "btn btn-primary-2 mb-3 btn-sm" %></p>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Descrição</th>
        <th>Preço</th>
        <th>Hotel</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @rooms.each do |room| %>
        <tr>
          <td><%= room.name %></td>
          <td><%= room.description %></td>
          <td><%= number_to_currency(room.price, unit: "R$") %></td>
          <td><%= room.hotel.name if room.hotel %></td>
          <td class="d-flex gap-2"> 
            <%= link_to "Mostrar", room_path(room), class: "btn btn-primary-2 btn-sm" %>
            <%= link_to "Editar", edit_room_path(room), class: "btn btn-primary-2 btn-sm" %>
            <%= button_to "Deletar", room_path(room), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
