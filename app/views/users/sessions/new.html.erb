 <div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card p-4 shadow" style="width: 100%; max-width: 400px;">
      <h3 class="text-center mb-4">Entrar</h3>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
        <div class="mb-3">
          <%= f.label :email, "Email", class: "form-label fw-bold" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
          <div class="invalid-feedback">Por favor, insira um email v√°lido.</div>
        </div>

        <div class="mb-3">
          <%= f.label :password, "Senha", class: "form-label fw-bold" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", required: true %>
          <div class="invalid-feedback">Por favor, insira sua senha.</div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="mb-3 form-check">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, "Lembrar-me", class: "form-check-label fw-bold" %>
          </div>
        <% end %>

        <div class="d-grid">
          <%= f.submit "Entrar", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

<%= render "users/shared/links" %>