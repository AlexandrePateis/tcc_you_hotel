<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card p-4 shadow" style="width: 100%; max-width: 400px;">
      <h3 class="text-center mb-4">Registrar-se</h3>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="mb-3">
          <%= f.label :name, "Nome", class: "form-label fw-bold" %>
          <%= f.email_field :name, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= f.label :email, "Email", class: "form-label fw-bold" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
          <div class="invalid-feedback">Por favor, insira um email válido.</div>
        </div>

        <div class="mb-3">
          <%= f.label :password, "Senha", class: "form-label fw-bold" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true %>
          <div class="invalid-feedback">Por favor, insira uma senha.</div>
        </div>

        <div class="mb-3">
          <%= f.label :password_confirmation, "Confirme sua senha", class: "form-label fw-bold" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %>
          <div class="invalid-feedback">Por favor, confirme sua senha.</div>
        </div>

        <div class="d-grid">
          <%= f.submit "Registrar-se", class: "btn btn-primary-2" %>
        </div>
      <% end %>
    </div>
  </div>

<%= render "users/shared/links" %>