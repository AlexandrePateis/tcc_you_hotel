<div class="d-flex justify-content-center align-items-center">
  <div class="w-50">
<div class="container mt-4">

  <%= form_with(model: @payment, local: true) do |form| %>
  <% if @payment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

      <ul>
        <% @payment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-3">
    <%= form.label :entry_date, "Data de Entrada", class: "form-label fw-bold" %>
    <%= form.date_field :entry_date, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :execution_date, "Data de Execução", class: "form-label fw-bold" %>
    <%= form.date_field :execution_date, class: "form-control", value: @payment.execution_date || Date.today %>
  </div>


  <div class="mb-3">
    <%= form.label :price, "Preço", class: "form-label fw-bold" %>
    <%= form.number_field :price, class: "form-control", value: @payment.price %>
  </div>


  <%= form.hidden_field :order_id %> <!-- Campo oculto para order_id se presente -->

  <div class="actions">
    <%= form.submit "Salvar", class: "btn btn-primary-2" %>
  </div>
<% end %>

</div>
