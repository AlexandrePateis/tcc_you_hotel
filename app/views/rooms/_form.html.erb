<div class="d-flex justify-content-center align-items-center">
  <div class="w-50">
<%= form_with(model: room, html: { class: "needs-validation", novalidate: true }) do |form| %>
  <% if room.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
        <% room.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, "Nome", class: "form-label fw-bold" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, "Descrição",  class: "form-label fw-bold" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :price, "Preço", class: "form-label fw-bold" %>
    <%= form.text_field :price, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :hotel_id, class: "form-label fw-bold" %>
    <%= form.collection_select :hotel_id, Hotel.where(user_id: current_user.id), :id, :name, { prompt: "Select a Hotel" }, { class: "form-select" } %>
  </div>

  <!-- Exemplo de campo de seleção para datas -->
  <div class="mb-3">
    <%= form.label :date, class: "form-label fw-bold" %>
    <%= form.date_field :date, class: "form-control" %>
  </div>

  <div>
    <%= form.submit "Save", class: "btn btn-primary-2" %>
  </div>
  </div>
  </div>
<% end %>
