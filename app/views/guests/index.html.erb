<div class="container mt-5">
  <h1>Hospedes</h1>

  <div class="mb-3">
    <%= link_to "Novo hóspede", new_guest_path, class: "btn btn-sm btn-primary-2" %>
  </div>

  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Nome</th>
        <th scope="col" class="text-nowrap">Data de Nascimento</th>
        <th scope="col">Telefone</th>
        <th scope="col">Gênero</th>
        <th scope="col">Nome do Pai</th>
        <th scope="col">Nome da Mãe</th>
        <th scope="col">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @guests.each do |guest| %>
        <tr>
          <td><%= guest.name %></td>
          <td><%= guest.birthdate.strftime("%d/%m/%Y") %></td>
          <td><%= guest.phone %></td>
          <td><%= guest.gender %></td>
          <td><%= guest.father_name %></td>
          <td><%= guest.mother_name %></td>
          <td class="d-flex gap-2">
            <%= link_to "Mostrar", guest, class: "btn btn-sm btn-primary-2" %>
            <%= link_to "Editar", edit_guest_path(guest), class: "btn btn-sm btn-primary-2" %>
            <%= button_to "Deletar", guest, method: :delete, class: "btn btn-sm btn-danger", data: { confirm: "Tem certeza que deseja deletar este convidado?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
