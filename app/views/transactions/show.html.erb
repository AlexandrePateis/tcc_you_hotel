<p style="color: green"><%= notice %></p>
<div class="container mt-5">

<div class="card">
  <div class="card-header">
    <h3 class="card-title">Detalhes da Transação</h3>
  </div>
  <div class="card-body">
    <p>
      <strong>Data de Execução:</strong>
      <%= @transaction.execution_date %>
    </p>

    <p>
      <strong>Tipo de Transação:</strong>
      <%= @transaction.transaction_type.humanize %>
    </p>

    <p>
      <strong>Descrição:</strong>
      <%= @transaction.description %>
    </p>

    <p>
      <strong>Metodo de Pagamento:</strong>
      <%= @transaction.payment_method.name %>
    </p>

    <p>
      <strong>Preço:</strong>
      <%= number_to_currency(@transaction.price, unit: "R$", delimiter: ".", separator: ",") %>
    </p>

    <p>
      <strong>Data do Pagamento:</strong>
      <%= @transaction.payment.date if @transaction.payment.present? %>
    </p>

    <p>
      <strong>ID do Pagamento:</strong>
      <%= @transaction.payment_id if @transaction.payment.present? %>
    </p>
  </div>
  <div class="d-flex gap-2 p-2">
    <%= link_to "Editar", edit_transaction_path(@transaction), class: "btn btn-primary btn-sm" %>
    <%= link_to "Voltar", transactions_path, class: "btn btn-secondary btn-sm" %>
    <%= button_to "Deletar", @transaction, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
  </div>
</div>
</div>
