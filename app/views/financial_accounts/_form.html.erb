<div class="d-flex justify-content-center align-items-center">
  <div class="w-50">
    <%= form_with(model: @financial_account, local: true) do |form| %>
      <% if @financial_account.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(@financial_account.errors.count, "erro") %> proibiu que a conta financeira fosse salva:</h4>
          <ul>
            <% @financial_account.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= form.label :hotel_id, "Hotel", class: "form-label fw-bold" %>
        <%= form.collection_select :hotel_id, Hotel.all, :id, :name, { prompt: "Selecione um Hotel" }, { class: "form-select" } %>
      </div>

      <div class="mb-3">
        <%= form.label :bank, "Banco", class: "form-label fw-bold" %>
        <%= form.text_field :bank, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :account_name, "Nome da Conta", class: "form-label fw-bold" %>
        <%= form.text_field :account_name, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :account_number, "Número da Conta", class: "form-label fw-bold" %>
        <%= form.text_field :account_number, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :agency, "Agência", class: "form-label fw-bold" %>
        <%= form.text_field :agency, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :description, "Descrição", class: "form-label fw-bold" %>
        <%= form.text_area :description, class: "form-control", rows: 3 %>
      </div>

      <div class="mb-3">
        <%= form.submit "Salvar", class: "btn btn-primary btn-sm" %>
        <%= link_to "Voltar", financial_accounts_path, class: "btn btn-secondary btn-sm" %>
      </div>
    <% end %>
  </div>
</div>
