<%= form_with(model: order, local: true) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
        <% order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :check_in_date %>
    <%= form.date_select :check_in_date %>
  </div>

  <div class="field">
    <%= form.label :check_out_date %>
    <%= form.date_select :check_out_date %>
  </div>

  <div class="field">
    <%= form.label :guest_id %>
    <%= form.collection_select :guest_id, Guest.all, :id, :name, prompt: "Select a Guest" %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date %>
  </div>

  <div class="field">
    <%= form.label :payment_id %>
    <%= form.collection_select :payment_id, Payment.all, :id, :date, prompt: "Select a Payment" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
